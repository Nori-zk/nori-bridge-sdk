{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "skipLibCheck": true
  },
  "include": [ "index.ts", "./artifacts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}