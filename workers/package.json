{
    "name": "@nori-zk/workers",
    "version": "0.0.4",
    "description": "An abstraction to enable workers which operate on node and the browser.",
    "author": "Jonathan Kelsey",
    "license": "Apache-2.0",
    "keywords": [
        "workers"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "type": "module",
    "main": "build/src/index.js",
    "types": "build/src/index.d.ts",
    "exports": {
        ".": "./build/src/index.js",
        "./node/parent": {
            "import": "./build/src/parent/index.node.js"
        },
        "./node/child": {
            "import": "./build/src/child/index.node.js"
        },
        "./browser/parent": {
            "import": "./build/src/parent/index.browser.js"
        },
        "./browser/child": {
            "import": "./build/src/child/index.browser.js"
        }
    },
    "scripts": {
        "clean": "rimraf build",
        "build": "npm run clean && tsc",
        "buildw": "tsc --watch",
        "coverage": "node ../node_modules/jest/bin/jest.js --coverage",
        "format": "prettier --write --ignore-unknown **/*",
        "test": "npm run build && node --experimental-vm-modules ../node_modules/jest/bin/jest.js",
        "testw": "node ../node_modules/jest/bin/jest.js --watch",
        "lint": "npx eslint src/* --fix"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@nori-zk/pts-types": "^3.0.13",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "eslint": "^8.7.0",
        "eslint-plugin-o1js": "^0.4.0",
        "jest": "^29.7.0",
        "npm-workspaces-publish-tool": "^0.0.14",
        "prettier": "^2.3.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18.14.0"
    }
}
